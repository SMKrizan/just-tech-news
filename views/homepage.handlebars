<ol class='post-list'>
    {{!-- all HTML code between these tags will be repeated for each item in 'posts' (see home-routes getAll route at .render) --}}
    {{#each posts as |post|}}
    <li>
        <article class='post'>
            <div class='title'>
                <a href='{{ post.post_url }}' target='_blank'>{{ post.title }}</a>
                <span>({{ post.post_url }})</span>
            </div>
            <div class='meta'>
                {{ post.vote_count }} point(s) by {{ post.user.username }} on
                {{ post.created_at }}
                |
                <a href='/post/{{ post.id }}'>{{ post.comments.length }} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>